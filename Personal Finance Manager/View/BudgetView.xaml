<UserControl x:Class="Personal_Finance_Manager.View.BudgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#F5F7F9" Padding="40">
        <StackPanel HorizontalAlignment="Center" MaxWidth="300">
            <TextBlock Text="Budget Overview" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Total Spent:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Total}" FontSize="18"/>
        </StackPanel>
    </Border>
</UserControl>
