<UserControl x:Class="Personal_Finance_Manager.View.BudgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Budget Overview" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Total Spent:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Total}" FontSize="18"/>
        </StackPanel>
    </Grid>
</UserControl>
